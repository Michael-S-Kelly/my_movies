<!DOCTYPE html>
<html>
  <%- include('../../layout/head') %>
<body>
    <%- include('../../layout/header') %>
  <main id="homeContent">
      <%- include('../../layout/search') %>
    <div class="details-contain">
      <div id="deet-image-contain">
    <img id="detailsimage" src="<%= movie.image_url %>">
    </div>
    <div class="star-rating-results">
      <% for(let i=0; i < movie.stars; i++) { %>
      <img class="star-image-results" src="../styles/images/star1.png">
      <% }%>
    </div>
    <h3 class="detailstitle"> <%= movie.title %> </h3>
    <p id="overviewdeets">Overview: <%= movie.overview %> </p>
    <p id="releaseddeets"> Released On:<%= movie.released_on %> </p>
    <p id="popdetails"> Popularity: <%= movie.popularity %> </p>
    <form target="_blank" action="http://www.amazon.com/exec/obidos/external-search" [RETURN] method="get">
      <input type="hidden" name="mode" value="blended" />
      <input type="hidden" name="tag" value="insert associate tag" /> Search
      Amazon:<br />
      <input type="text" name="keyword" size="10" value="<%= movie.title %>" />
      <input type="submit" value="Go" />
    </form>
    <form action="/delete/<%= movie.id %>" method="post">
      <button type="submit">Delete Movie</button>
    </form>
    <section class="reviews">
        <section>
          <p><%= movie.username %></p>
          <p><%= movie.review %></p>
        </section>
    </section>
    <form action = "<%= `/details/${movie.id}`%>"  method = "post">
      <input type="hidden" name="_method" value="<%-'put' %>">
      <label>Title: <input type="text" name="title" value="<%= movie.title %>" placeholder="<%= movie.title %>"/> </label>
      <label>Overview: <input type="text" name="overview" value="<%= movie.overview %>" placeholder="<%= movie.overview %>"/> </label>
      <label>Released On: <input type="text" name="Released On" value="<%= movie.released_on %>" placeholder="<%= movie.released_on %>"/> </label>
      <label>Popularity: <input type="text" name="popularity"value="<%= movie.popularity %>" placeholder="<%= movie.popularity %>"/> </label>
      <button type = submit>Update</button>
    </form>

    <form action="<%- `/details/${movie.id}` %>" method="post">
      <lable><input type="text" name="username" placeholder="userName" value="userName"></lable>
      <input type="hidden" name="created_at" value=" <%= Date.now() %>"/>
      <lable><input type="text" name="review" placeholder="Your Review Here" value="review" /></lable>
      <input type="hidden" name="movie_id" value="<%- movie.id %>"/>
      <button type=submit>Add Review</button>
    </form>
  </div>
  </main>
  <%- include('../../layout/footer') %>
  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <script src="../../public/scripts/app.js"></script>
</body>

</html>
